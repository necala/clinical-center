package drools.spring.rules;

import drools.spring.example.model.Symptom;
import drools.spring.example.model.Illness;

rule "Tonsil Inflammation - Symptoms"
	no-loop 
	agenda-group "symptoms"
    when
        $i: Illness( name == "Tonsil Inflammation" )
    then
    	Symptom s = new Symptom();
    	s.setTerm(Symptom.Term.PAIN_TO_EARS);
    	s.setSpecific(false);
    	s.setHelper("Pain to ears");
    	$i.getSymptoms().add(s);
    	Symptom s1 = new Symptom();
    	s1.setTerm(Symptom.Term.SORE_THROAT);
    	s1.setSpecific(false);
    	s1.setHelper("Sore throat");
    	$i.getSymptoms().add(s1);
    	Symptom s2 = new Symptom();
        s2.setTerm(Symptom.Term.HEADACHE);
    	s2.setSpecific(false);
    	s2.setHelper("Headache");
    	$i.getSymptoms().add(s2);
    	Symptom s3 = new Symptom();
    	s3.setTerm(Symptom.Term.TEMP_BETWEEN_40_AND_41);
    	s3.setSpecific(false);
    	s3.setHelper("Temperature between 40 and 41");
    	$i.getSymptoms().add(s3);
    	Symptom s4 = new Symptom();
    	s4.setTerm(Symptom.Term.SHIVER);
    	s4.setSpecific(false);
    	s4.setHelper("Shiver");
    	$i.getSymptoms().add(s4);
    	Symptom s5 = new Symptom();
    	s5.setTerm(Symptom.Term.APPETITE_LOSS);
    	s5.setSpecific(false);
    	s5.setHelper("Appetite loss");
    	$i.getSymptoms().add(s5);
    	Symptom s6 = new Symptom();
    	s6.setTerm(Symptom.Term.TIREDNESS);
    	s6.setSpecific(false);
    	s6.setHelper("Tiredness");
    	$i.getSymptoms().add(s6);
    	Symptom s7 = new Symptom();
    	s7.setTerm(Symptom.Term.YELLOW_SECRETION_FROM_NOSE);
    	s7.setSpecific(false);
    	s7.setHelper("Yellow secretion from nose");
    	$i.getSymptoms().add(s7);
    	update($i);
    	
end
